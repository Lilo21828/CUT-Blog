@model Email
@{
    ViewData["Title"] = "Contact Us";
}
<!-- The code is a Razor view file for a contact page in a web application-->
<!-- It includes a form where users can submit their name, email, subject, and message-->

<head>
    <link rel="stylesheet" href="~/css/index.css" />
</head>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<body>
    <div class="contact-container">
        
        <div class="col-md-6" id="contact-form">
            <h3>
                Feedback
            </h3>
            <form asp-action="Contact" asp-controller="Home" method="post" class="contact-form">

                <div class="form-group" id="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="form-group" id="form-group">
                    <label asp-for="Body" class="control-label"></label>
                    <input asp-for="Body" class="form-control" />
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>


                <div class="form-group" id="form-group">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>
            </form>
            
        </div>
    </div>
</body>